{
    "name": "Fitocracy Performance Sorter!",
    "version": "0.1",
    "icons": { 
        "16": "/img/icon16.png",
        "48": "/img/icon48.png",
        "128": "/img/icon128.png" 
    },
    "homepage_url": "https://github.com/petems/FitocracyDropdownSorter",

    "description": "Sorts the Fitocracy Performance drop-down alphabetically.",

